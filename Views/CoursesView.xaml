<UserControl x:Class="Regularnik.Views.CoursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" Margin="0,40">

            <!-- Nagłówek z nazwą kursu -->
            <TextBlock Text="{Binding CourseName}"
                       Foreground="#FFD93D"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,25"/>

            <!-- Lista słówek -->
            <ItemsControl ItemsSource="{Binding Words}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{Binding WordPl}" Foreground="White" Width="170"/>
                            <TextBlock Text=" - " Foreground="#FFD93D"/>
                            <TextBlock Text="{Binding WordEn}" Foreground="White" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>
