<Window x:Class="Regularnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Regularnik.ViewModels"
        Title="Regularnik" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="361*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="222,0,0,0">
            <Button Content="Start"
                    Command="{Binding LoadCoursesCommand}"
                    Width="120" Margin="0,0,0,20"/>
            <ListBox ItemsSource="{Binding Courses}"
                     DisplayMemberPath="Name"
                     Width="200" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
