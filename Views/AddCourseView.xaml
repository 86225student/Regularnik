<UserControl x:Class="Regularnik.Views.AddCourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <!-- Jeżeli potrzebujesz lokalnego zasobu (np. ReverseTile), zadeklaruj go tutaj -->
    <UserControl.Resources>
        <!-- przykład stylu bazującego na TileButtonStyle -->
        <Style x:Key="ReverseTile" TargetType="Button" BasedOn="{StaticResource TileButtonStyle}">
            <Setter Property="Background" Value="#FFE47A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E8AB9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- LEWY PANEL: formularz -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Dodaj nowy kurs"
                 Foreground="#FFD93D"
                 FontSize="30"
                 FontWeight="Bold"
                 Margin="0,0,0,20"/>

            <TextBlock Text="Nazwa kursu" Foreground="#FFD93D" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding CourseName, UpdateSourceTrigger=PropertyChanged}"
               Height="30" Padding="5" Margin="0,0,0,15"/>

            <TextBlock Text="Słowo po polsku" Foreground="#FFD93D" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding WordPl, UpdateSourceTrigger=PropertyChanged}"
               Height="30" Padding="5" Margin="0,0,0,15"/>

            <TextBlock Text="Słowo po angielsku" Foreground="#FFD93D" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding WordEn, UpdateSourceTrigger=PropertyChanged}"
               Height="30" Padding="5" Margin="0,0,0,15"/>

            <TextBlock Text="Przykład PL" Foreground="#FFD93D" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding ExPl, UpdateSourceTrigger=PropertyChanged}"
               Height="30" Padding="5" Margin="0,0,0,15"/>

            <TextBlock Text="Przykład EN" Foreground="#FFD93D" FontWeight="SemiBold" Margin="0,0,0,15"/>
            <TextBox Text="{Binding ExEn, UpdateSourceTrigger=PropertyChanged}"
               Height="30" Padding="5" Margin="0,0,0,25"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="➕ Dodaj słowo"
                Command="{Binding AddWordCommand}"
                Style="{DynamicResource RoundButtonStyle}"
                FontWeight="Bold"
                Width="140" Height="40"
                Margin="0,0,10,0"
                VerticalAlignment="Center"/>
                <Button Content="💾 Zapisz kurs"
                Command="{Binding SaveCourseCommand}"
                Style="{DynamicResource RoundButtonStyle}"
                FontWeight="Bold"
                Width="140" Height="40"
                Margin="0,0,0,0"
                VerticalAlignment="Center"/>
            </StackPanel>

        </StackPanel>

        <!-- PRAWY PANEL: lista słówek -->
        <ScrollViewer Grid.Column="1"
                  Margin="50,0,0,0"
                  Padding="0,0,0,80"
                  VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding TempWords}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{DynamicResource TileButtonStyle}"
                    Margin="10"
                    Padding="10,6"
                    FontWeight="Bold"
                    MinWidth="400"
                    MaxWidth="420"
                    HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="{Binding WordPl}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="#1E2A38"
                           FontWeight="Bold"
                           Margin="0,0,0,2"/>
                                <TextBlock Text="{Binding WordEn}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="#1E2A38"
                           FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
