<UserControl x:Class="Regularnik.Views.CourseSessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Regularnik.Converters">

    <!--RESOURCES-->
    <UserControl.Resources>
        <conv:EnumToVisibilityConverter x:Key="EnumToVisibility"/>

        <!-- kompaktowy kafelek – 160 px szer. -->
        <Style x:Key="Tile160" TargetType="Button" BasedOn="{StaticResource TileButtonStyle}">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>

        <!-- szeroki kafelek – 220 px (domyślny TileButtonStyle) -->
        <Style x:Key="Tile220" TargetType="Button" BasedOn="{StaticResource TileButtonStyle}">
            <Setter Property="Width" Value="220"/>
        </Style>
    </UserControl.Resources>

    <!--LAYOUT-->
    <Grid>
        <!-- trzy pasy: nagłówek | liczniki | treść -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== NAGŁÓWEK ===== -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Header}"
                   Foreground="#FFD93D"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,32"/>

        <!-- ===== GÓRNE LICZNIKI / START LEKCJI ===== -->
        <StackPanel Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,40">

            <!-- POWTÓRKI -->
            <Button Content="{Binding ReviewLabel}"
            Style="{StaticResource Tile160}"
            Command="{Binding StartReviewCommand}" />

            <!-- UTRWAL -->
            <Button Content="{Binding ReinforceLabel}"
            Style="{StaticResource Tile160}"
            Command="{Binding StartReinforceCommand}" />

            <!-- NOWE -->
            <Button Content="{Binding NewLabel}"
            Style="{StaticResource Tile160}"
            Command="{Binding StartNewCommand}"
            Margin="0" />
        </StackPanel>



        <!-- ===== STREFA TREŚCI ===== -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- karta / menu / done -->
                <RowDefinition Height="Auto"/>
                <!-- WIEM / … -->
            </Grid.RowDefinitions>


            <!-- ~~~~ FRONT ~~~~ -->
            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding Stage,
                                     Converter={StaticResource EnumToVisibility},
                                     ConverterParameter=Front}">
                <TextBlock Text="{Binding WordPl}"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="{Binding ExEn}"
                           Width="460"
                           TextWrapping="Wrap"
                           FontSize="18"
                           Foreground="#FFD93D"
                           TextAlignment="Center"
                           Margin="0,12"/>

                <Button Content="Sprawdź"
                        Style="{StaticResource RoundButtonStyle}"
                        Command="{Binding ShowBackCommand}"
                        Margin="0,30,0,0"/>
            </StackPanel>

            <!-- ~~~~ BACK ~~~~ -->
            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding Stage,
                                     Converter={StaticResource EnumToVisibility},
                                     ConverterParameter=Back}">
                <TextBlock Text="{Binding WordPl}"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="{Binding WordEn}"
                           FontSize="20"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"
                           Margin="0,6"/>

                <TextBlock Text="{Binding ExEn}"
                           Width="460"
                           TextWrapping="Wrap"
                           FontSize="18"
                           Foreground="#CCCCCC"
                           TextAlignment="Center"/>

                <TextBlock Text="{Binding ExPl}"
                           Width="460"
                           TextWrapping="Wrap"
                           FontSize="18"
                           Foreground="#CCCCCC"
                           TextAlignment="Center"
                           Margin="0,4"
                           Visibility="{Binding ShowPolishExample,
                                                Converter={StaticResource BoolToVis}}"/>

                <Button Content="TŁUMACZ"
                        Style="{StaticResource Tile160}"
                        Width="130"
                        Command="{Binding ToggleTranslateCmd}"
                        Margin="0,20,0,0"/>
            </StackPanel>

            <!-- ~~~~ DONE ~~~~ -->
            <TextBlock Grid.Row="0"
                       Text="🎉  To już wszystko na dziś!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding Stage,
                                    Converter={StaticResource EnumToVisibility},
                                    ConverterParameter=Done}"/>

        <!-- ==== WIEM / PRAWIE / NIE WIEM ==== -->
            <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,120"  
                    Visibility="{Binding Stage,
                                 Converter={StaticResource EnumToVisibility},
                                 ConverterParameter=Back}">

                <Button Content="WIEM"
                    Style="{StaticResource Tile160}"
                    Command="{Binding KnowCmd}"
                    Margin="0,0,10,0"/>

                <Button Content="PRAWIE"
                    Style="{StaticResource Tile160}"
                    Command="{Binding AlmostCmd}"
                    Margin="0,0,10,0">
                    <Button.Visibility>
                        <MultiBinding Converter="{StaticResource HideAlmostVis}">
                            <Binding Path="ActiveCat"/>
                            <Binding RelativeSource="{RelativeSource Self}" Path="Content"/>
                        </MultiBinding>
                    </Button.Visibility>
                </Button>

                <Button Content="NIE WIEM"
                    Style="{StaticResource Tile160}"
                    Command="{Binding DontKnowCmd}"
                    Margin="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
