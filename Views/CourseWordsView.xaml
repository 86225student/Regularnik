<UserControl x:Class="Regularnik.Views.CourseWordsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- nagłówek -->
            <RowDefinition Height="*"/>
            <!-- przewijana lista -->
            <RowDefinition Height="100"/>
            <!-- rezerwa na przycisk „Wróć” -->
        </Grid.RowDefinitions>

        <!-- nagłówek „Kurs: …” -->
        <TextBlock Grid.Row="0"
               Text="{Binding Header}"
               Foreground="#FFD93D"
               FontSize="26"
               FontWeight="Bold"
               Margin="0,25,0,10"
               HorizontalAlignment="Center"/>

        <!-- lista słówek; przewijanie skacze co cały kafelek -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Words}" Margin="0,20,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{DynamicResource TileButtonStyle}"
                    Width="300"
                    Margin="0,0,0,15"
                    Padding="10,6"
                    FontWeight="Bold">
                            <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Center">
                                <TextBlock Text="{Binding WordPl}"
                           Foreground="#1E2A38"
                           FontSize="16"
                           Margin="0,0,6,0"/>
                                <TextBlock Text="–"
                           Foreground="#1E2A38"
                           FontSize="16"/>
                                <TextBlock Text="{Binding WordEn}"
                           Foreground="#1E2A38"
                           FontSize="16"
                           Margin="6,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- VirtualizingStackPanel z przewijaniem „po elementach” -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel ScrollUnit="Item"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- pusta, przezroczysta stopka – odsunięcie od przycisku „Wróć” -->
        <Border Grid.Row="2" Background="Transparent"/>
    </Grid>
</UserControl>
