<UserControl x:Class="Regularnik.Views.CourseWordsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Regularnik.ViewModels">
    <Grid>
        <Grid.RowDefinitions>
            <!-- przycisk Edytuj i nagłówek zawsze u góry -->
            <RowDefinition Height="Auto"/>
            <!-- przewijana lista słówek -->
            <RowDefinition Height="*"/>
            <!-- rezerwa na przycisk Wróć -->
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                HorizontalAlignment="Center"
                Margin="0,20,0,10">
            <!-- Nagłówek -->
            <TextBlock Text="{Binding Header}"
                 Foreground="#FFD93D"
                 FontSize="26"
                 FontWeight="Bold"
                 TextAlignment="Center"/>

            <!-- Edytuj kurs pod spodem -->
            <Button Content="✏️ Edytuj kurs"
              Style="{DynamicResource RoundButtonStyle}"
              Command="{Binding EditCourseCommand}"
              Visibility="{Binding CanModify, Converter={StaticResource BoolToVis}}"
              FontWeight="Bold"
              HorizontalAlignment="Center"
              Margin="0,10,0,0"/>

            <!-- Usuń kurs pod Edit -->
            <Button Content="🗑 Usuń kurs"
        Command="{Binding DeleteCourseCommand}"
        Visibility="{Binding CanModify, Converter={StaticResource BoolToVis}}"
        HorizontalAlignment="Center"
        Margin="0,10,0,0"
        FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource RoundButtonStyle}">
                        <!-- domyślne tło i tekst -->
                        <Setter Property="Background" Value="#B22222"/>
                        <!-- taki sam kolor tekstu jak w Edytuj kurs (z RoundButtonStyle) -->
                        <Setter Property="Foreground" Value="#1E2A38"/>
                        <Style.Triggers>
                            <!-- najechanie myszką -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E06E6E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- lista słówek przewijana -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Words}" Margin="0,20,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel ScrollUnit="Item"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{DynamicResource TileButtonStyle}"
                                Width="300"
                                Margin="0,0,0,15"
                                Padding="10,6"
                                FontWeight="Bold">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding WordPl}" Foreground="#1E2A38" FontSize="16" Margin="0,0,6,0"/>
                                <TextBlock Text="–" Foreground="#1E2A38" FontSize="16"/>
                                <TextBlock Text="{Binding WordEn}" Foreground="#1E2A38" FontSize="16" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- przezroczysta stopka -->
        <Border Grid.Row="2" Background="Transparent"/>
    </Grid>
</UserControl>